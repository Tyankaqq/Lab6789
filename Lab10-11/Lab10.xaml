<Page x:Class="Lab10_11.Lab10"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab10_11"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lab10">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="OpenFileButton" Click="Button_Click_1">
            <Image Source="open.png"/>
        </Button>

        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" FontSize="16" x:Name="pathText" Width="476" Height="66"/>
        <ScrollViewer Grid.Row="2">
            <TextBlock x:Name="FileContentTextBox" TextWrapping="Wrap" Width="316" Height="143" />
        </ScrollViewer>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" x:Name="Count" Height="65" Width="386"/>
    </Grid>

</Page>
